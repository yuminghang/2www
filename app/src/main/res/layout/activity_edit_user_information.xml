<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purple"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/goBackLinearLayout"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="23dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/bg_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="昵称"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />
        <TextView
            android:id="@+id/saveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@color/white"
            android:layout_gravity="center|right"
            android:textSize="@dimen/text_size_big"
            android:layout_marginRight="15dp"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/nickNameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c8c7cc"
            android:layout_marginTop="40dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white">
            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="昵称"
                android:layout_marginLeft="15dp"
                android:textColor="#535353"
                android:textSize="@dimen/text_size_normal"/>
            <EditText
                android:id="@+id/typeEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/text_size_normal"
                android:inputType="text"
                android:hint="请输入新昵称"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c8c7cc"></LinearLayout>
        <TextView
            android:id="@+id/waringTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置后，其他人将看到你的昵称"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_small"
            android:textColor="#c9c9c9"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sexLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c8c7cc"></LinearLayout>
        <LinearLayout
            android:id="@+id/manLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="男"
                android:layout_marginLeft="15dp"/>
            <RadioButton
                android:id="@+id/manRadioButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:button="@null"
                android:checked="true"
                android:clickable="false"
                android:background="@drawable/selector_radio_button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c7cc"
            android:layout_marginLeft="15dp"></LinearLayout>
        <LinearLayout
            android:id="@+id/womanLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="女"
                android:layout_marginLeft="15dp"/>
            <RadioButton
                android:id="@+id/womanRadioButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="15dp"
                android:button="@null"
                android:clickable="false"
                android:background="@drawable/selector_radio_button"/>/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c8c7cc"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/passwordLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c8c7cc"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="原密码"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/oldPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_normal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c8c7cc"
            android:layout_marginLeft="15dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="新密码"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/newPasswordEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_normal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c8c7cc"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center|left">
            <CheckBox
                android:id="@+id/showPasswordCheckbox"
                style="@style/customCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:text="显示密码"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>