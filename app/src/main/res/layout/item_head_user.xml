<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="261dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/headPicImageView"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:background="@mipmap/maoboli_02"/>
        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:layout_marginBottom="-10dp"
            android:background="@mipmap/touxiang_tupian_03"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="4dp"
                    android:src="@mipmap/jifen_06"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:gravity="center"
                    android:layout_marginTop="23dp"
                    android:textSize="@dimen/text_size_big1"
                    android:textColor="@color/text_color_black1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:gravity="center"
                    android:layout_marginTop="41dp"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_black1"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pamela"
                    android:gravity="center"
                    android:layout_marginTop="9dp"
                    android:textSize="@dimen/text_size_big1"
                    android:textColor="@color/text_color_black1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电子卡会员"
                    android:gravity="center"
                    android:layout_marginTop="9dp"
                    android:textSize="@dimen/text_size_big1"
                    android:textColor="@color/text_color_black1"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="4dp"
                    android:src="@mipmap/xiaoxi_09"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="消息"
                    android:gravity="center"
                    android:layout_marginTop="23dp"
                    android:textSize="@dimen/text_size_big1"
                    android:textColor="@color/text_color_black1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:gravity="center"
                    android:layout_marginTop="41dp"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_black1"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>