<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="16dp" >
    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@mipmap/yaunjiaojuxing_03">
        <Button
            android:id="@+id/dismissButton"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:background="@mipmap/cancel_03"
            android:layout_gravity="right"
            android:layout_margin="14dp"/>
        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp">
            <ImageView
                android:id="@+id/kongfuPanderImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/xiongmao_04"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="96dp">
                <TextView
                    android:id="@+id/msg0TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="恭喜你"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/msgTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="接到一个包子"
                    android:gravity="center"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/msgT1extView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="优惠券一张"/>
            </LinearLayout>
        </FrameLayout>
        <TextView
            android:id="@+id/message2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="星巴克优惠券，已放入您的账户"
            android:textColor="@color/yellow"
            android:gravity="center"
            android:layout_marginTop="210dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginBottom="30dp">
            <Button
                android:id="@+id/positiveButton"
                android:layout_width="102dp"
                android:layout_height="41dp"
                android:background="@mipmap/icon_11"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="50dp"
                android:text="放弃"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"/>
            <Button
                android:layout_gravity="center"
                android:id="@+id/continueGameButton"
                android:layout_width="122dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="继续游戏"
                android:background="@mipmap/icon_11"
                android:visibility="gone"/>
            <Button
                android:id="@+id/negativeButton"
                android:layout_width="102dp"
                android:layout_height="41dp"
                android:background="@mipmap/icon_11"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="14dp"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:text="确定"
                android:textSize="@dimen/text_size_big"/>
        </FrameLayout>
    </FrameLayout>

</FrameLayout>