<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/purple"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/goBackLinearLayout"
                android:layout_width="100dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center|left"
                    android:background="@mipmap/bg_back"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_big"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/registerTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:gravity="center|right"
                android:text="快速注册"
                android:textSize="@dimen/text_size_big"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"/>
        </FrameLayout>
        <RadioGroup
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/codeRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:padding="3dp"
                android:text="验证码登录"
                android:background="@drawable/radio_layer"
                android:textColor="@drawable/selector_grey_pou"
                android:textSize="10dp" />
            <RadioButton
                android:id="@+id/passwordRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="密码登录"
                android:background="@drawable/radio_layer_right"
                android:textColor="@drawable/selector_grey_pou"
                android:textSize="10dp" />
        </RadioGroup>
        <LinearLayout
            android:layout_marginTop="29dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:paddingLeft="18dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="手机号"
                android:background="@color/white"/>
            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:textSize="@dimen/text_size_normal"
                android:background="@null"
                android:inputType="phone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="验证码"/>
            <EditText
                android:id="@+id/verificationCodeEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_normal"
                android:background="@null"
                android:maxLength="11"
                android:inputType="number"/>
            <LinearLayout
                android:id="@+id/lineLinearLayout"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/purple"
                android:layout_gravity="center"
                android:orientation="horizontal"></LinearLayout>
            <TextView
                android:id="@+id/getVerificationCodeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="获取验证码"
                android:textColor="@color/purple"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:paddingLeft="15dp"/>
        <LinearLayout
            android:id="@+id/codeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="收不到验证码？使用"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="免费语音获取"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_size_small"/>

        </LinearLayout>
        <Button
            android:id="@+id/loginButton"
           android:layout_marginTop="42dp"
            android:layout_marginBottom="42dp"
            android:layout_width="275dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@mipmap/bg_login_button"
            android:text="立即登录"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="39dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/purple"
                android:layout_gravity="center"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:text="使用社交账号登陆"
                android:gravity="center"
                android:textColor="@color/text_color">
            </TextView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/purple"
                android:layout_marginRight="10dp"
                android:layout_gravity="center|right"></LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:background="@mipmap/weibo_03"
                />
            <Button
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:background="@mipmap/weixin_05"
                android:layout_marginLeft="65dp"/>
            <Button
                android:layout_marginLeft="65dp"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:background="@mipmap/qq_07"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

