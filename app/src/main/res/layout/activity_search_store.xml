<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purple"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/goBackLinearLayout"
            android:layout_width="38dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="23dp"
                android:layout_gravity="center|left"
                android:background="@mipmap/bg_back"
                android:layout_marginLeft="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="258dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="@mipmap/bg_search">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="搜索商家或品牌名称"
                android:textSize="@dimen/text_size_small"
                android:background="@null"
                android:gravity="center|left"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginLeft="15dp"
                android:inputType="text"
                />
            <Button
                android:id="@+id/searchButton"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@mipmap/search_button"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"/>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:id="@+id/changeFoolLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textSize="@dimen/text_size_normal"
                android:text="楼层"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:src="@mipmap/arraw_down"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/checkStoreLinear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="全部商户"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:src="@mipmap/arraw_down"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/syntheticallyLinearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:text="默认排序"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="12dp"
                android:layout_height="8dp"
                android:src="@mipmap/arraw_down"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/searchStoreListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none"></ListView>
</LinearLayout>