<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="20">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/purple"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/goBackLinearLayout"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="23dp"
                android:layout_gravity="center|left"
                android:layout_marginLeft="15dp"
                android:background="@mipmap/bg_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="品牌详情"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_big" />
        <TextView
            android:id="@+id/startMapTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地图"
            android:textColor="@color/white"
            android:layout_gravity="center|right"
            android:textSize="@dimen/text_size_big"
            android:layout_marginRight="15dp"/>
    </FrameLayout>
    <ListView
        android:layout_marginTop="44dp"
        android:id="@+id/newProductListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:scrollbars="none"
        ></ListView>

    <FrameLayout
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_marginRight="32dp">

        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@id/arc_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arc_axisRadius="96dp"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="306dp"
            app:arc_freeAngle="true"
            app:arc_origin="center"
            app:arc_radius="144dp">
            <Button

                android:background="@mipmap/shoucang1_06"

                android:layout_width="33dp"
                android:layout_height="33dp" />

            <Button
                android:background="@mipmap/xihuan1_03"

                android:layout_width="33dp"
                android:layout_height="33dp" />

            <Button

                android:background="@mipmap/pinglun1_03"

                android:layout_width="33dp"
                android:layout_height="33dp" />

            <Button
                android:background="@mipmap/fenxiang1_08"
                android:layout_width="33dp"
                android:layout_height="33dp" />
        </com.ogaclejapan.arclayout.ArcLayout>

    </FrameLayout>
    <Button
        android:id="@+id/menuButton"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@mipmap/jiahao_03"
        android:layout_marginRight="14dp"/>

</RelativeLayout>