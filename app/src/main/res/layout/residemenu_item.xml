<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/img_frame_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="100dp">
            <com.delin.dgclient.view.CustomImageView
                android:id="@+id/headPicImageView"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:background="@drawable/headpic_bg"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="闫百玲"
                android:layout_marginBottom="46dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/white"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/loginLinearLayout"
                android:layout_marginTop="28dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:background="@mipmap/denglu_07"/>
                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="55dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="30dp"
                    android:background="@mipmap/zhuche_09"
                   />
            </LinearLayout>
            

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"></LinearLayout>
        <LinearLayout
            android:id="@+id/aboutUsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginRight="100dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:layout_margin="10dp"
                android:src="@mipmap/about_us" />

            <TextView
                android:id="@+id/aboutUSTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="关于我们"
                android:textColor="#f0f0f0"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center|left"
                android:layout_gravity="left|center"/>
            <ImageView
                android:layout_gravity="center|right"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_right" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="51dp"></LinearLayout>
        <LinearLayout
            android:id="@+id/serviceUsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="100dp">
            <ImageView
                android:id="@+id/serviceImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:layout_margin="10dp"
                android:src="@mipmap/term_of_service" />

            <TextView
                android:id="@+id/serviceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="服务条款"
                android:textColor="#f0f0f0"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                />
            <ImageView
                android:layout_gravity="center|right"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_right" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="51dp"></LinearLayout>
        <LinearLayout
            android:id="@+id/userInforLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="100dp">
            <ImageView
                android:id="@+id/userinforImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:layout_margin="10dp"
                android:src="@mipmap/term_of_service" />

            <TextView
                android:id="@+id/userInforTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="个人中心"
                android:textColor="#f0f0f0"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                />
            <ImageView
                android:layout_gravity="center|right"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_right" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="51dp"></LinearLayout>
        <LinearLayout
            android:id="@+id/couponLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="100dp">
            <ImageView
                android:id="@+id/couponImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:layout_margin="10dp"
                android:src="@mipmap/term_of_service" />

            <TextView
                android:id="@+id/couponUSTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="优惠券"
                android:textColor="#f0f0f0"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                />
            <ImageView
                android:layout_gravity="center|right"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_right" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="51dp"></LinearLayout>
        <LinearLayout
            android:id="@+id/shareLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="100dp">
            <ImageView
                android:id="@+id/shareImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:layout_margin="10dp"
                android:src="@mipmap/term_of_service" />

            <TextView
                android:id="@+id/shareTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="分享"
                android:textColor="#f0f0f0"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                />
            <ImageView
                android:layout_gravity="center|right"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_right" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginLeft="51dp"></LinearLayout>
        <LinearLayout
            android:id="@+id/settingLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="100dp">
            <ImageView
                android:id="@+id/settingImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center|left"
                android:layout_margin="10dp"
                android:src="@mipmap/term_of_service" />

            <TextView
                android:id="@+id/settingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:text="设置"
                android:textColor="#f0f0f0"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center|left"
                android:layout_gravity="left|center"
                />
            <ImageView
                android:layout_gravity="center|right"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/arrow_right" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"></LinearLayout>




    </LinearLayout>

</LinearLayout>